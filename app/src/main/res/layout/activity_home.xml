<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        >
        <FrameLayout
            android:id="@+id/header_frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/header_bottom_ly"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="@mipmap/rectangle"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <RadioGroup
            android:id="@+id/header_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <RadioButton
                android:id="@+id/header_radio_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_but"
                android:checked="true"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                />
            <RadioButton
                android:id="@+id/header_radio_circle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/circle_but"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                />
            <RadioButton
                android:id="@+id/header_radio_shopping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/commom_tab_btn_shopping"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                />
            <RadioButton
                android:id="@+id/header_radio_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/order_but"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                />
            <RadioButton
                android:id="@+id/header_radio_main"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@null"
                android:drawableTop="@drawable/my_but"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                />
        </RadioGroup>

    </LinearLayout>



</LinearLayout>